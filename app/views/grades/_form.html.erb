  <div class="field">
    <%= f.label :assignment_id %>
    <%= f.select :assignment_id, options_for_select(Assignment.all.map{|s|[s.to_s, s.id]}) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
